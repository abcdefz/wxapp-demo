page {
  height: 100%;
  background-color: #e5e5e5;
  /*background-color: #b3d4db*/
}

.container {
  display: flex;
  flex-direction: column;
}

.addView {
  display: flex;
  flex-direction: row;
  width: 90%;
  margin-left: 50rpx;
  margin-top: 20px;
}

.inputView {
  width: 600rpx;
  vertical-align: middle;
  margin-right: 30rpx;
}

.input {
  height: 80rpx;
  border-bottom: #888 solid 1px;
}

.addBtnView {
  width: 160rpx;
  margin-right: 8px;
  margin-bottom: 20rpx;
  vertical-align: middle;
}

.btn {
  height: 80rpx;
  background-color: #e5e5e5;
  font-size: 33rpx;
}

.textBlock {
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
}

.blockView {
  display: block;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.text {
  color: #666;
  font-size: 40rpx;
  margin-top: 10rpx;
  margin-bottom: 5rpx;
}

.delete {
  float: right;
  margin-right: 30rpx;
}


/* 滑动 */
.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden
}
.content {
  color: #666;
  font-size: 40rpx;
  margin-top: 10rpx;
  margin-bottom: 5rpx;
  width: 100%;
  padding: 10px;
  line-height: 22px;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90rpx);
  transform: translateX(90rpx);
  margin-left: -110rpx
}
.del {
  background-color: #e5e5e5;
  font-size: 30rpx;
  color: #666;
  width: 55px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  -webkit-transform: translateX(55px);
  transform: translateX(55px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}